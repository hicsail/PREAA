LITELLM_BASE_URL=http://localhost:4000
LITELLM_API_KEY=<LITELLM_KEY>
MONGODB_URI=mongodb://127.0.0.1:27017/preaa-admin

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=myrealm
KEYCLOAK_CLIENT_ID=my-nextjs-client
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret_here

# Proxy API Authentication
# Generate a secure random key: openssl rand -hex 32
PROXY_API_KEY=your_proxy_api_key_here_generate_with_openssl_rand_hex_32

# CORS Configuration
# Comma-separated list of allowed origins. Supports wildcard subdomains (e.g., *.bu.edu)
# Examples:
#   ALLOWED_ORIGINS=https://example.com,https://another-site.com
#   ALLOWED_ORIGINS=https://*.bu.edu,https://embedded-preaa.sail.codes
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Rate Limiting Configuration
# Per IP rate limit (requests per window)
RATE_LIMIT_PER_IP=100
# Per model rate limit (requests per window)
RATE_LIMIT_PER_MODEL=50
# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
