# Copy to .env.ragflow and update secrets/ports as needed
DOC_ENGINE=elasticsearch
DEVICE=cpu
STACK_VERSION=8.11.3
RAGFLOW_IMAGE=infiniflow/ragflow:v0.21.1-slim
MEM_LIMIT=8589934592

# POSTGRES
POSTGRES_HOST=postgres
POSTGRES_DBNAME=rag_flow
POSTGRES_PASSWORD=UPDATE_ME
POSTGRES_PORT=5432
POSTGRES_MAX_PACKET=1073741824
POSTGRES_USER=psql_user

ES_HOST=ragflow-es
ES_PORT=9202
ELASTIC_PASSWORD=UPDATE_ME

MINIO_HOST=minio
# Note: MINIO_PORT and MINIO_CONSOLE_PORT are not used by RagFlow
# RagFlow connects to MinIO's internal port 9000 (as configured in service_conf.yaml.template)
# External ports are 9090 (API) and 9091 (console) per docker-compose.yml
# MINIO_PORT=9090
# MINIO_CONSOLE_PORT=9091
MINIO_USER=ragflow
MINIO_PASSWORD=UPDATE_ME

REDIS_HOST=redis
REDIS_PORT=6479
REDIS_PASSWORD=UPDATE_ME

SVR_WEB_HTTP_PORT=7080
SVR_WEB_HTTPS_PORT=7443
SVR_HTTP_PORT=9380
ADMIN_SVR_HTTP_PORT=9381
SVR_MCP_PORT=9382

# TEI (Text Embeddings Inference) - OPTIONAL: Self-hosted embeddings service
# Uncomment if using self-hosted embeddings instead of external providers (OpenAI, etc.)
# TEI_HOST=ragflow-tei
# TEI_PORT=6380
# TEI_MODEL=BAAI/bge-small-en-v1.5
# TEI_IMAGE_CPU=infiniflow/text-embeddings-inference:cpu-1.8

REGISTER_ENABLED=1
DOC_BULK_SIZE=4
EMBEDDING_BATCH_SIZE=16
USE_DOCLING=false
USE_MINERU=false
TZ=America/New_York
