# n8n Configuration
# Copy this file to .env.n8n and update the values as needed

# Basic Authentication (for local testing)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Host Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Environment
NODE_ENV=production
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RUNNERS_ENABLED=true

# Timezone
GENERIC_TIMEZONE=America/New_York
TZ=America/New_York

# Database (optional - n8n can use SQLite by default)
# N8N_DATABASE_TYPE=postgresdb
# N8N_DATABASE_POSTGRESDB_HOST=postgres
# N8N_DATABASE_POSTGRESDB_PORT=5432
# N8N_DATABASE_POSTGRESDB_DATABASE=n8n
# N8N_DATABASE_POSTGRESDB_USER=psql
# N8N_DATABASE_POSTGRESDB_PASSWORD=UPDATE_ME

# Security (optional)
# N8N_ENCRYPTION_KEY=UPDATE_ME

# Logging (optional)
# N8N_LOG_LEVEL=info
# N8N_LOG_OUTPUT=console,file

# File Storage (optional)
# N8N_DEFAULT_BINARY_DATA_MODE=filesystem
# N8N_BINARY_DATA_TTL=24
